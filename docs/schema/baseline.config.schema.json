{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Baseline Config Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Optional JSON Schema link for editor IntelliSense."
    },
    "targets": {
      "description": "Browserslist targets override.",
      "oneOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": { "type": "string" }
        }
      ]
    },
    "unsupportedThreshold": {
      "type": "number",
      "description": "Reclassify needs-guard to safe when unsupported% <= this value.",
      "minimum": -1
    },
    "ignore": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Glob patterns to ignore (CLI only)."
    },
    "features": {
      "type": "object",
      "description": "Per-feature toggles (true/false).",
      "additionalProperties": { "type": "boolean" }
    }
  }
}
