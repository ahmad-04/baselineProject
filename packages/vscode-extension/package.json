{
  "name": "baseline-guardrails-vscode",
  "private": true,
  "displayName": "Baseline Guard",
  "description": "Inline diagnostics and quick fixes for non-Baseline web features.",
  "version": "0.0.4",
  "publisher": "ahmad-04",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmad-04/baselineProject.git"
  },
  "bugs": {
    "url": "https://github.com/ahmad-04/baselineProject/issues"
  },
  "homepage": "https://github.com/ahmad-04/baselineProject/tree/main/packages/vscode-extension",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "baseline",
    "web platform",
    "web-features",
    "browserslist",
    "compatibility",
    "diagnostics",
    "quick fix"
  ],
  "galleryBanner": {
    "color": "#0b0d12",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:css",
    "onLanguage:html"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "baseline.scanWorkspace",
        "title": "Baseline: Scan Workspace"
      },
      {
        "command": "baseline.debugDump",
        "title": "Baseline: Debug Dump Diagnostics"
      },
      {
        "command": "baseline.toggleScanMode",
        "title": "Baseline: Toggle Scan Mode (change/save)"
      },
      {
        "command": "baseline.pickTargets",
        "title": "Baseline: Pick Targets/Threshold"
      },
      {
        "command": "baseline.restartLsp",
        "title": "Baseline: Restart LSP (experimental)"
      },
      {
        "command": "baseline.fixAll",
        "title": "Baseline: Fix all in file"
      }
    ],
    "configuration": {
      "title": "Baseline Guardrails",
      "properties": {
        "baseline.scanOnChange": {
          "type": "boolean",
          "default": true,
          "description": "Scan on change (true) or only on save (false)."
        },
        "baseline.targets": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "markdownDescription": "Optional override for Browserslist targets used by Baseline analysis. When set, this takes precedence over baseline.config.json and nearest package.json browserslist. Example: ['> 0.5%', 'not dead', 'chrome >= 120']."
        },
        "baseline.unsupportedThreshold": {
          "type": "number",
          "default": -1,
          "markdownDescription": "Optional override for unsupported percentage threshold. When > -1, findings with unsupported <= this value are treated as safe.",
          "minimum": -1
        },
        "baseline.useLsp": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Experimental: Use the Baseline LSP server (stdio) instead of built-in analysis when available. Falls back automatically if the server is not found."
        },
        "baseline.showSafe": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Show findings that are considered 'safe to adopt' (normally hidden). Useful for full adoption inventory reports."
        }
      }
    }
  },
  "scripts": {
    "build": "rimraf dist && npx tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "publish": "node scripts/publish.cjs",
    "publish:patch": "node scripts/publish.cjs patch",
    "publish:minor": "node scripts/publish.cjs minor",
    "publish:major": "node scripts/publish.cjs major"
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.84.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.5.4"
  }
}
